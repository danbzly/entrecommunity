<!DOCTYPE html>
<html>
<head>
  <title>Entrecommunity</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
    <div class="navbar-inverse ">
	<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">	
    <div class="container"> 


      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href="#">EntreCommunity</a>

 
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
       

        <!-- .nav, .navbar-search, .navbar-form, etc -->

        <% if user_signed_in? %>
             <ul class="nav">
        	     <li><%= link_to "All Statuses", statuses_path %></li>
               <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             Account
              <b class="caret"></b>
             </a>
              <ul class="dropdown-menu">
        	
                 <li><a tabindex="-1" href="#">log in</a></li>
                 <li><a tabindex="-1" href="#">Another action</a></li>
                 <li><a tabindex="-1" href="#">Something else here</a></li>
                 <li class="divider"></li>
                 <li><a tabindex="-1" href="#">Separated link</a></li>

   
         </ul>
     </li>
   </ul>


        <form class="navbar-search ">
          <input type="text" class="search-query" placeholder="Search">
        </form>
        
    

        <div>
         
        <ul class="nav pull-right">
          
            <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
        
           
          <li class="dropdown">

            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
       Account
        <b class="caret"></b>
       </a>
        <ul class="dropdown-menu">
         
            <li><%= link_to "log out", destroy_user_session_path, method: :delete %></li>
            
               <% else %>
               <ul class="nav pull-right"> 
              <li><%= link_to "Register", new_user_registration_path %></li>
              <li><%= link_to "log in", new_user_session_path %></li></ul>
             <% end %>
             
           </ul>

         </li>

       </ul>
      



    </div>


  </div>


</div>

</div>

</div>

<% flash.each do |type, message| %>
            <div class="alert <%= flash_class type %>">
                <button class="close" data-dismiss="alert">x</button>
                    <%= message %>
            </div>
          <% end %> 
  
               
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->


    </div>
    <div class="span10">
      <%= yield %>
    </div>
  </div>
</div>


</body>
</html>
